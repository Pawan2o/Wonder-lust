<% layout("/layouts/boilerplate") -%>
    <div class="row">
        <div class="col-8 offset-2">
            <br />
            <h3>Add New Listing</h3>
            <br />
            <hr />
            <br />
            <form method="POST" action="/data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="data[title]" type="text" placeholder="Title" class="form-control" />
                </div>

                <div class="mb-3"> 
                    <label for="Description" class="form-label">Description</label>
                    <textarea name="data[description]" type="text" placeholder="Enter Your Description"
                        class="form-control"></textarea>
                </div>


                <div class="mb-3"> 
                    <label for="Image" class="form-label">Image URL</label>
                    <input name="data[image][url]" type="text" placeholder="image URL/link" class="form-control" />
                </div>

                <div class="row ">
                    
                    <div class="mb-3 col-4"> 
                        <label for="price" class="form-label">Price</label>
                        <input name="data[price]" type="number" placeholder="Price" class="form-control" />
                    </div>

                    <div class="mb-3 col-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="data[country]" type="text" placeholder="Country" class="form-control" />
                    </div>

                </div>

                <div class="mb-3">
                     <label for="location" class="form-label">Location</label>
                    <input name="data[location]" type="text" placeholder="Location" class="form-control" />
                </div>

                <div class="mb-3"></div>
                <button class="btn btn-dark add-btn">Add Listing</button>
                <br />
                <br />
            </form>
        </div>
    </div>